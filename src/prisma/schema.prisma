generator client {
  provider     = "prisma-client"
  output       = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "sqlite"
}

model User {
  id       Int     @id @default(autoincrement())
  name     String?
  email    String  @unique
  password String
  books    Book[]

  @@map("users")
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String
  date        DateTime
  pageNumbers Int
  isPublic    Boolean
  user        User?    @relation(fields: [userId], references: [id])
  userId      Int?

  @@unique([userId, title])
  @@map("books")
}
